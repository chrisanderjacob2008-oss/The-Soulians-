    .page {
      display: none;
      height: 100vh;
      width: 100vw;
      padding: 60px 20px;
      box-sizing: border-box;
      opacity: 0;
      transition: opacity 0.6s;
    }

    .active {
      display: block;
      opacity: 1;
    }

    img {
      max-width: 60%;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    h1 {
      color: #001858;
    }

    p {
      font-size: 1.2rem;
      color: #172c66;
      max-width: 600px;
      margin: 20px auto;
    }

    .nav {
      position: fixed;
      bottom: 20px;
      width: 100%;
      display: flex;
      justify-content: space-between;
      padding: 0 40px;
      box-sizing: border-box;
    }

    button {
      background-color: #f582ae;
      color: white;
      border: none;
      border-radius: 12px;
      padding: 12px 24px;
