<body>

  <!-- Story Pages -->
  <div class="page active" id="page1">
    <h1>Page 1: The Beginning</h1>
    <img src="https://picsum.photos/id/1018/600/400" alt="Forest">
    <p>Once upon a time, in a quiet forest, a little fox set out on an adventure.</p>
  </div>

  <div class="page" id="page2">
    <h1>Page 2: The Journey</h1>
    <img src="https://picsum.photos/id/1025/600/400" alt="Mountain">
    <p>The fox climbed over tall mountains and crossed rivers under the stars.</p>
  </div>

  <div class="page" id="page3">
    <h1>Page 3: The Discovery</h1>
    <img src="https://picsum.photos/id/1041/600/400" alt="Treasure">
    <p>At last, the fox found a glowing crystal that lit up the entire valley.</p>
  </div>

  <!-- Navigation Buttons -->
  <div class="nav">
    <button id="prev">⬅️ Back</button>
    <button id="next">Next ➡️</button>
  </div>

  <script>
    const pages = document.querySelectorAll(".page");
    let current = 0;

    const showPage = (index) => {
      pages.forEach((page, i) => {
        page.classList.remove("active");
        if (i === index) page.classList.add("active");
      });
    };

    document.getElementById("next").addEventListener("click", () => {
      current = (current + 1) % pages.length;
      showPage(current);
    });

    document.getElementById("prev").addEventListener("click", () => {
      current = (current - 1 + pages.length) % pages.length;
      showPage(current);
    });

    // Optional: allow keyboard arrow navigation
    document.addEventListener("keydown", (e) => {
      if (e.key === "ArrowRight") {
        current = (current + 1) % pages.length;
        showPage(current);
      } else if (e.key === "ArrowLeft") {
        current = (current - 1 + pages.length) % pages.length;
        showPage(current);
      }
    });
  </script>
</body>
</html>
